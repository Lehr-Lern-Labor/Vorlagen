\newcommand{\radioitem}[2][]{%
	\item[%
		\ifEmpty{#1}{%
			\radiochoice{#2}%
		}{%
			\radiochoice{#2}%
		}%
	] #2%
}


\newcommand{\checkitem}[2][]{%
	\item[%
		\ifEmpty{#1}{%
			\checkchoice{#2}%
		}{%
			\checkchoice{#1}%
		}%
	] #2%
}

\newcommand{\radiochoice}[2][]{{%
	\ChoiceMenu[%
		radio,%
		name=\name,%
		radiosymbol=\ding{55},%
		bordercolor=,%
		backgroundcolor=,%
		#1%
	]{ }{=#2}%
}}

\newcommand{\checkchoice}[2][]{{%
	\stepcounter{choice}%
	\CheckBox[%
		name={#2},%
		checkboxsymbol=\ding{55},%
		bordercolor=black,%
		#1
	]{ } %
}}






\newenvironment{matrixfrage}[3][\matrixWidth]{%
	\newcommand{\matrixitem}[2][]{%
		\setcounter{quest}{0}
		\ifEmpty{##1}{%
			\global\def\name{ ##2}
		}{%
			\global\def\name{ ##1}
		}%
		##2\Repeat{#2}{&}\\%
	}%
	\let\option\matrixitem%
	\tabularx{\textwidth}{%
		@{}p{#1}%
		*{#2}{%
			@{}>{%
				\centering%
				\arraybackslash%
				\stepcounter{quest}%
				\makebox[0pt][c]{%
					\radiochoice[name=\name]{%
						\thequest%
					}%
				}%
			}%
			X@{}%
		}%
	}%
	\quformat{#3}%
}{%
	\endtabularx%
	\par%
}

\newcommand{\head}[1]{%
	&\multicolumn{1}{@{}>{\arraybackslash}X@{}}{%
		\parbox[b]{\hsize}{%
			\centering%
			\scriptsize%
			#1%
		}%
	}%
}