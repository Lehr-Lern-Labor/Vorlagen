		\stepcounter{choice}%
		\def\name{#2}%	
		\parbox[t]{\labelWidth}{%
			#2%
		}%
		\foreach \n in {#3} {\radiochoice[#1]{\n} \n\hfill}%
		\par%
	\endgroup%
}

