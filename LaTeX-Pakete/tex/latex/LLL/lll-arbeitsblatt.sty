% ----- Kombi
\def\kombi{\@ifstar\@kombi\@@kombi}

\newcommand{\@kombi}[3][]{%
	\@aufgabe[#1]{#2}{#3}%
	\@loesung[#1,symb=\faCheck]{#2}{#3}%
}

\newcommand{\@@kombi}[3][]{%
	\@@aufgabe[#1]{#2}{#3}%
